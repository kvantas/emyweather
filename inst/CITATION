citHeader("To cite emyweather in publications, please use:")

citEntry(
  entry = "Manual",
  author = as.person("Konstantinos Vantas"),
  title = "{emyweather}: R package with open climatic data from the Greek National Meteorological Service",
  doi = "10.5281/zenodo.1159500",
  year = 2018,
  note   = {"R package version 0.2.0"},
  url    = {"https://github.com/kvantas/emyweather"},
  textVersion = paste("Vantas, (2018).",
  "emyweather: R package with open climatic data from the Greek National Meteorological Service",
  "URL: https://github.com/kvantas/emyweather",
  "DOI:http://doi.org/10.5281/zenodo.1159500"),
)
